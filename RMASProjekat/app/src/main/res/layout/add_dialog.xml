<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"

    android:padding="10dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Dodaj dogadjaj"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/etNazivAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="Naziv"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etOpisAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="Opis"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/cbxTip"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="Tip"
        android:spinnerMode="dropdown"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etDatum"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="dd-MM-yyyy"
            android:inputType="date"
            android:paddingLeft="10dp"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etVreme"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="HH:mm:ss"
            android:inputType="time"
            android:paddingLeft="10dp"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="Dodaj sliku:"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/btnDodajSliku"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_photo" />

        <TextView
            android:id="@+id/tvSlikaDodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Slika dodata "
            android:textColor="@color/green"
            android:textSize="20sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/crvena"
            android:elevation="0dp"
            android:text="Cancel"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnDodaj"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple"
            android:elevation="0dp"
            android:text="Dodaj"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>