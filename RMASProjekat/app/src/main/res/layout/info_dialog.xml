<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:elevation="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="true">

        <ImageView
            android:id="@+id/slikaDogadjaja"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:scaleType="centerCrop" />

    </RelativeLayout>


    <EditText
        android:id="@+id/etNazivInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />

    <TextView
        android:id="@+id/tvNaziv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@id/slikaDogadjaja"
        app:layout_constraintEnd_toEndOf="@id/slikaDogadjaja"
        app:layout_constraintStart_toStartOf="@id/slikaDogadjaja"
        app:layout_constraintTop_toTopOf="@id/slikaDogadjaja" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Organizator:"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvAutor"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="22sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvOpis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221" />

    <EditText
        android:id="@+id/etOpisInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Datum odrzavanja:"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvDatumOdrzavanja"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="22sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/etDatumInfo"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="dd-MM-yyyy"
            android:inputType="date"
            android:textSize="22sp"
            android:visibility="gone"
            tools:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Vreme odrzavanja:"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvVremeOdrzavanja"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/etVremeInfo"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="HH:mm:ss"
            android:inputType="time"
            android:textSize="22sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tip:"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvTip"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="22sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <Spinner
            android:id="@+id/cbxTipInfo"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="22sp"
            android:visibility="gone"
            tools:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDugmici"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391">

        <Button
            android:id="@+id/btnIzbrisi"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/crvena"
            android:text="Izbrisi"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnIzmeni"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple"
            android:text="Izmeni"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnSacuvajIzmene"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple"
            android:text="Sacuvaj"
            android:textSize="20sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>